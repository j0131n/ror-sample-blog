<div class="row">

    <div class="col s12">
      <div class="card darken-1 z-depth-3 hoverable">
        <div class="card-content">
          <span class="card-title">
          <%= @post.title %>
          <a href="<%= home_path %>" class="btn-floating halfway-fab waves-effect waves-teal orange darken-1" style="right: 80px; bottom: 15px !important">
              <i class="material-icons" style="line-height: unset !important">list</i>
          </a>
          <a href="<%= edit_post_path(@post) %>" class="btn-floating halfway-fab waves-effect waves-teal red darken-1" style="bottom: 15px !important">
              <i class="material-icons" style="line-height: unset !important">edit</i>
          </a>
          </span>
          <p><%= @post.description %></p>
        </div>
        <div class="card-action blue darken-1">
        </div>
      </div>
    </div>

</div>

<%= render 'comments/comments' %>
<%= render 'comments/form' %>